#include<stdlib.h>
#include<iostream>

using namespace std;

struct TreeNode {
     int val;
     TreeNode *left;
     TreeNode *right;
     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
};

TreeNode* flatten(TreeNode* root)
    {
        if(root == NULL) {
            return NULL;
        }

        TreeNode* lEnd = flatten(root->left);

        TreeNode* rEnd = flatten(root->right);

        if(lEnd) lEnd->right = rStart;

        root->left = NULL;

        root->right = lEnd == NULL ? rEnd : lEnd;


        *start = root;

        if(rEnd != NULL) *end = rEnd;
        else if(lEnd != NULL) *end = lEnd;
        else *end = root;
    }

    void flatten(TreeNode *root) {

        TreeNode* start = NULL, *end = NULL;

        flatten(root, &start, &end);

    }

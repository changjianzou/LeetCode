#include<stdlib.h>
#include<stack>
#include<iostream>

using namespace std;

struct TreeNode {
     int val;
     TreeNode *left;
     TreeNode *right;
     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
};


    //using in order traverse
    void recoverTree(TreeNode *root) {

        stack<TreeNode*> s;

        if(root == NULL || ( !root->left && !root->right)) return;

        TreeNode* current = root;

        TreeNode* first = NULL, *second = NULL;

        TreeNode* prev = NULL, *p = NULL;

        while( !s.empty() || current )
        {
            if(current)
            {
                s.push(current);
                current = current->left;
            }
            else{
                current = s.top()->right;

                prev = p;

                p = s.top();

                cout<<prev->val<<" "<<p->val<<endl;

                s.pop();

                if(prev && p->val < prev->val)
                {
                    first = first == NULL ? prev : first;

                    if(second != NULL){
                        second = p; break;
                    }else{
                        second = p; cout<<first->val<<" "<<second->val<<" "<<endl;
                    }
                }
            }
        }

        int temp = first->val;
        first->val = second->val;
        second->val = temp;

    }

    void test()
    {
    	TreeNode* root = new TreeNode(1);
    	root->left = new TreeNode(2);
    	root->right = new TreeNode(3);
    	recoverTree(root);
    }

    int main()
    {
    	test();
    }
